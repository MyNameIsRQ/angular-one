{
  "generator-angular-one": {
    "uirouter": true,
    "partialDirectory": "app/",
    "modalDirectory": "app/",
    "directiveDirectory": "app/",
    "filterDirectory": "app/",
    "serviceDirectory": "app/",
    "controllerDirectory": "app/",
    "inject": {
      "js": {
        "file": "index.html",
        "marker": "<!-- Add New Component JS Above -->",
        "template": "<script src=\"<%= filename %>\"></script>"
      },
      "less": {
        "relativeToModule": true,
        "file": "<%= module %>.less",
        "marker": "/* Add Component LESS Above */",
        "template": "@import \"<%= filename %>\";"
      }
    }
  }
}